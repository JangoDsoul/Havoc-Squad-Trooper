<Defs>

<!-- Havoc Squad Helmet -->
  <ThingDef ParentName="ArmorHelmetMakeableBase">
		<defName>Havoc_Squad_helmet</defName>
		<label>Havoc Squad Helmet</label>
		<description>“The Havoc Squad, also known as Havoc Squadron, was an elite Republic Special Forces squad of troopers in the army of the Galactic Republic, who fought against the Sith Empire during the Great Galactic War. Originally known as infantry squad 326"</description>
		<techLevel>Spacer</techLevel>
		<tradeability>Sellable</tradeability>
	<graphicData>
      <texPath>Things/Apparel/Head/HavocSquadHelmet</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>

    <statBases>
		<WorkToMake>13000</WorkToMake>
		<MaxHitPoints>150</MaxHitPoints>
		<Mass>2.4</Mass>
		<Flammability>0.1</Flammability>
		<ArmorRating_Sharp>0.80</ArmorRating_Sharp>
		<ArmorRating_Blunt>0.33</ArmorRating_Blunt>
		<ArmorRating_Heat>0.75</ArmorRating_Heat>
		<Insulation_Cold>5</Insulation_Cold>
		<Insulation_Heat>3</Insulation_Heat>
		<EquipDelay>1.5</EquipDelay>
    </statBases>
    <equippedStatOffsets>
		<ToxicSensitivity>-0.80</ToxicSensitivity>
		<SocialImpact>0.35</SocialImpact>
		<ShootingAccuracyPawn>0.25</ShootingAccuracyPawn>
		<NegotiationAbility>0.05</NegotiationAbility>
	</equippedStatOffsets>

    <costList>
		<Steel>100</Steel>
		<Plasteel>50</Plasteel>
		<ComponentIndustrial>4</ComponentIndustrial>
		<ComponentSpacer>1</ComponentSpacer>
    </costList>
    <recipeMaker>
		<unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
		<researchPrerequisite>JDSHavocSquad</researchPrerequisite>
		<skillRequirements>
			<Crafting>7</Crafting>
		</skillRequirements>
		<recipeUsers Inherit="False">
			<li>JDSForge</li>
        </recipeUsers>
    </recipeMaker>
	
    <apparel>
		<bodyPartGroups>
			<li>FullHead</li>
		</bodyPartGroups>
		<wornGraphicPath>Things/Apparel/Head/HavocSquadHelmet</wornGraphicPath>
		<layers>
			<li>Overhead</li>
		</layers>
		<tags>
			<li>IndustrialMilitaryAdvanced</li>
		</tags>
		<defaultOutfitTags>
			<li>Soldier</li>
		</defaultOutfitTags>
		<useDeflectMetalEffect>true</useDeflectMetalEffect>
    </apparel>
	<thingCategories Inherit="False">
		<li>Headgear</li>
	</thingCategories>
  </ThingDef>

